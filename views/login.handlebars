<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="button is-small is-responsive is-light" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">Name:</label>
        <input class="input" type="text" id="name-signup" placeholder="Your Name" />
      </div>
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="input" type="email" id="email-signup" placeholder="Email"/>
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="input" type="password" id="password-signup" placeholder="Password"/>
      </div>
      <div class="form-group">
        <button class="button is-outlined is-responsive" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>