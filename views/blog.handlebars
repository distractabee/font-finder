{{#each posts as |post|}}
<div class="blog-container">
  <div class='post-container'>
    <!-- container class for styling -->
    <div class='row mb-4 post'>
      <div class='col-md-12'>

        <h2 class='post-title'>
          
          <a href='/post/{{post.id}}'>{{post.title}}</a>
          <div class='post-info'>
            <span class='post-author'>Created by {{post.user.username}}</span>           
            <span class='post-date'>on {{format_date post.date_created}}</span>
            
          </div>
        </h2>

        <p class='post-content'>
          {{post.content}}
        </p>

      </div>
    </div>
  </div>
</div>
{{/each}}

{{#if logged_in}}
{{{ new-post }}}
{{/if}}